<div class="page-header">
  <%= render 'shared/navigation' %>
</div>

<h1>Create New Client</h1>

<%= form_with(model: @client, local: true) do |form| %>
  <% if @client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>
      <ul>
        <% @client.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Client Name" %>
    <%= form.text_field :name, required: true, class: "form-control" %>
    <small class="help-text">The full name of the client contact person</small>
  </div>

  <div class="field">
    <%= form.label :company, "Company" %>
    <%= form.text_field :company, required: true, class: "form-control" %>
    <small class="help-text">The company or organization name</small>
  </div>

  <div class="field">
    <%= form.label :email, "Email Address" %>
    <%= form.email_field :email, required: true, class: "form-control" %>
    <small class="help-text">Primary contact email for this client</small>
  </div>

  <div class="field">
    <%= form.label :phone, "Phone Number" %>
    <%= form.telephone_field :phone, class: "form-control" %>
    <small class="help-text">Optional phone number for this client</small>
  </div>

  <div class="actions">
    <%= form.submit "Create Client", class: "btn btn-primary" %>
    <%= link_to "Cancel", clients_path, class: "btn btn-secondary" %>
  </div>
<% end %>
