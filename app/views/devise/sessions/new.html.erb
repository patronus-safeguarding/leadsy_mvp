<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1 class="auth-title">Welcome Back</h1>
      <p class="auth-subtitle">Sign in to your Leadsie account</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <% if resource.errors.any? %>
        <div class="auth-errors">
          <h3><%= pluralize(resource.errors.count, "error") %> prohibited this sign in:</h3>
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :email, "Email Address", class: "field-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-input", placeholder: "Enter your email" %>
      </div>

      <div class="field">
        <%= f.label :password, "Password", class: "field-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "field-input", placeholder: "Enter your password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field checkbox-field">
          <%= f.check_box :remember_me, class: "checkbox-input" %>
          <%= f.label :remember_me, "Remember me", class: "checkbox-label" %>
        </div>
      <% end %>

      <div class="auth-actions">
        <%= f.submit "Sign In", class: "btn btn-primary auth-submit" %>
      </div>
    <% end %>

    <div class="auth-links">
      <% if devise_mapping.registerable? %>
        <p class="auth-link-text">
          Don't have an account? 
          <%= link_to "Sign up", new_registration_path(resource_name), class: "auth-link" %>
        </p>
      <% end %>
      
      <% if devise_mapping.recoverable? %>
        <p class="auth-link-text">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "auth-link" %>
        </p>
      <% end %>
    </div>
  </div>
</div>
